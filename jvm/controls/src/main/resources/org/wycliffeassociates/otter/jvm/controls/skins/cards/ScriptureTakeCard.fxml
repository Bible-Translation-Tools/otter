<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.*?>

<VBox styleClass="card--scripture-take" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="CENTER" spacing="8.0">
         <children>
            <Label fx:id="takeDrag" styleClass="card--scripture-take__take-drag">
               <graphic>
                  <FontIcon iconLiteral="mdi-drag-horizontal" />
               </graphic>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="takeLabel" styleClass="card--scripture-take__take-label" text="Take 1" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="deleteBtn" styleClass="card--scripture-take__delete-icon">
               <graphic>
                  <FontIcon iconLiteral="mdi-delete" />
               </graphic>
            </Button>
         </children>
      </HBox>
      <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
         <children>
            <JFXSlider fx:id="slider" HBox.hgrow="ALWAYS" styleClass="card--take__slider" />
         </children>
      </HBox>
      <HBox alignment="CENTER" spacing="16.0" VBox.vgrow="ALWAYS">
         <children>
            <Button fx:id="playBtn" styleClass="card--scripture-take__btn">
               <graphic>
                  <FontIcon iconLiteral="mdi-play" />
               </graphic>
            </Button>
            <Button fx:id="editBtn" styleClass="card--scripture-take__btn">
               <graphic>
                  <FontIcon iconLiteral="gmi-mode-edit" styleClass="card--scripture-take__btn--edit" />
               </graphic>
            </Button>
            <Button fx:id="markerBtn" styleClass="card--scripture-take__btn">
               <graphic>
                  <FontIcon iconLiteral="gmi-bookmark" />
               </graphic>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
